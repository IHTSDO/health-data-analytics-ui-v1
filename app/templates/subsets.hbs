
<div class="col-md-12 row">
    <div class="col-md-12">
        <div class="col-md-6 grey-border-bottom">
            <h2>Cohort</h2>
        </div>
        <div class="col-md-6 grey-border-bottom">
            <h3>{{model.cohortData.totalElements}} Patients Matched</h3>
        </div>
    </div>
    <div class="col-md-3">
        <h3 class="grey-border-bottom">Subsets</h3>
        <div class="">
            {{#each model as |subset|}}
                <p>{{#link-to 'subsets.edit' subset class="collection-item"}}{{subset.name}}{{/link-to}}</p>
            {{/each}}
        </div>
        <a class="btn-floating waves-effect waves-light blue"><i class="material-icons">add</i></a>
    </div>
    <div class="col-md-9 grey-border-bottom grey-border-left">
        <h3 class="grey-border-bottom">Editing Subset : Test subset</h3>
            <div class="row">
                <div class="col-md-8">
                    <h4 style="margin-left:10px;">Cohort Refinement</h4>
                    <div class="col-md-10 input-field" style="margin-left:10px;">
                      <div style="color: #9e9e9e; font-size:1rem; font-weight: bold;">Subset Name</div>
                      <input type="text" name="gender" id="genderSelect" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="col-md-10 input-field">
                              <div style="color: #9e9e9e; font-size:1rem; font-weight: bold;">Type</div>
                              <select name="gender" id="genderSelect" class="form-control">    
                                <option value="null"></option>
                                <option value="male">Self</option>
                                <option value="female" selected>Descendant of</option>
                                <option value="female">Descendant of or self</option>
                              </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-10">
                                {{concept-listing filter=model.primaryExposure value=model.primaryExposure  title='Focus Concept' cssId="primaryExposure"}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-5 col-md-offset-3 input-field">
                              <div style="color: #9e9e9e; font-size:1rem; font-weight: bold;">Operator</div>
                              <select name="gender" id="genderSelect" class="form-control">    
                                <option value="null"></option>
                                <option value="AND">AND</option>
                                <option value="OR" selected>OR</option>
                                <option value="MINUS">MINUS</option>
                              </select>
                            </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="col-md-10 input-field">
                              <div style="color: #9e9e9e; font-size:1rem; font-weight: bold;">Type</div>
                              <select name="gender" id="genderSelect" class="form-control">    
                                <option value="null"></option>
                                <option value="male" selected>Self</option>
                                <option value="<<">Descendant of</option>
                                <option value="female">Descendant of or self</option>
                              </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="col-md-10">
                                {{concept-listing filter=model.primaryExposure value=model.primaryExposure  title='Focus Concept'}}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a class="waves-effect waves-light btn blue col-md-5 col-md-offset-3" {{action "addRefinement"}}>Add Refinement</a>
                    </div>
                    <div class="col-md-6">
                        <a class="waves-effect waves-light btn blue col-md-5 col-md-offset-3" {{action "addAttrRefinement"}}>Add Attribute Refinement</a>
                    </div>
                </div>
            </div>

            <div class="row col-md-12">
                <a class="waves-effect waves-light btn green col-md-1 col-md-offset-3" {{action "saveSubset"}}>Save Subset</a>
            </div>

            
    </div>
</div>
